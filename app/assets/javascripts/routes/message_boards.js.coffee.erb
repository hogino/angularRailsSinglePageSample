
app.config [
  "$stateProvider"
  "$locationProvider"
  (
    $stateProvider
    $locationProvider
  ) ->
#    $locationProvider.html5Mode(true)
    base_url = "/mesage_boards"
    $stateProvider
      .state("messageBoards",
        url: base_url
        views:
          "":
            templateUrl: "<%= asset_path("layouts/signed_in.html") %>"
          "subMenu@messageBoards":
            templateUrl: "<%= asset_path("home/sub_menu.html") %>"
          "mainContent@messageBoards":
            templateUrl: "<%= asset_path("message_boards/index.html") %>"
            controller: "MessageBoardsCtrl"
      )
      .state("messageBoardsNew",
        url: "#{base_url}/new"
        views:
          "":
            templateUrl: "<%= asset_path("layouts/signed_in.html") %>"
          "subMenu@messageBoardsNew":
            templateUrl: "<%= asset_path("home/sub_menu.html") %>"
          "mainContent@messageBoardsNew":
            templateUrl: "<%= asset_path("message_boards/new.html") %>"
            controller: "MessageBoardsCtrl"
      )
      .state("messageBoardsEdit",
        url: "#{base_url}/:id/edit"
        views:
          "":
            templateUrl: "<%= asset_path("layouts/signed_in.html") %>"
          "subMenu@messageBoardsEdit":
            templateUrl: "<%= asset_path("home/sub_menu.html") %>"
          "mainContent@messageBoardsEdit":
            templateUrl: "<%= asset_path("message_boards/edit.html") %>"
            controller: "MessageBoardsCtrl"
      )
]