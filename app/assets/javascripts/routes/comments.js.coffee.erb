
app.config [
  "$routeProvider"
  "$locationProvider"
  (
    $routeProvider
    $locationProvider
  ) ->
    $locationProvider.html5Mode(true)
    $routeProvider
      .when("/message_boards/:message_board_id/comments",
        templateUrl: "<%= asset_path("comments/index.html") %>"
        controller: "CommentsCtrl"
      )
      .otherwise redirectTo: "/"
]