
app.config [
  "$stateProvider"
  "$locationProvider"
  (
    $stateProvider
    $locationProvider
  ) ->
    # can not use ui route html5 mode?
#    $locationProvider.html5Mode(true)
    $stateProvider
      .state("messageBoardsComment",
        url:"/message_boards/:message_board_id/comments"
        views:
          "":
            templateUrl: "<%= asset_path("layouts/signed_in.html") %>"
          "subMenu@messageBoardsComment":
            templateUrl: "<%= asset_path("home/sub_menu.html") %>"
          "mainContent@messageBoardsComment":
            templateUrl: "<%= asset_path("comments/index.html") %>"
            controller: "CommentsCtrl"
      )
]