
app.config [
  "$stateProvider"
#  "$locationProvider"
  (
    $stateProvider
#    $locationProvider
  ) ->
#    $locationProvider.html5Mode(true)
    baseUrl = '/users'
    $stateProvider
      .state("users",
        url: baseUrl
        views:
          "":
            templateUrl: "<%= asset_path("layouts/signed_in.html") %>"
          "subMenu@users":
            templateUrl: "<%= asset_path("home/sub_menu.html") %>"
            controller: ($scope) ->
              $scope.isUser = true
          "mainContent@users":
            templateUrl: "<%= asset_path("users/index.html") %>"
            controller: "UsersCtrl"
        data:
          user: true
          message: false
      )
      .state("users.registration",
        url: "/registration"
        views:
          "mainContent":
            templateUrl: "<%= asset_path("users/registration.html") %>"
            controller: "UsersCtrl"
      )
      .state("users.login",
        url: "/login"
        views:
          "mainContent":
            templateUrl: "<%= asset_path("users/login.html") %>"
            controller: "UsersCtrl"
      )
      .state("users.pwdReset",
        url: "/pwd_reset"
        views:
          "mainContent":
            templateUrl: "<%= asset_path("users/password_reset.html") %>"
            controller: "UsersCtrl"
      )
      .state("users.pwdUpdate",
        url: "/pwd_update"
        views:
          "mainContent":
            templateUrl: "<%= asset_path("users/password_update.html") %>"
            controller: "UsersCtrl"
      )
      .state("users.accountUpdate",
        url: "/account_update"
        views:
          "mainContent":
            templateUrl: "<%= asset_path("users/account_update.html") %>"
            controller: "UsersCtrl"
      )
]